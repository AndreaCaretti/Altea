{
	"name": "cap-template",
	"version": "1.0.0",
	"description": "A simple CAP project create from sbarzaghi template.",
	"repository": "<Add your repository here>",
	"license": "UNLICENSED",
	"private": true,
	"dependencies": {
		"@sap/audit-logging": "^3",
		"@sap/cds": "^4",
		"@sap/cds-mtx": "^1",
		"@sap/hana-client": "^2",
		"@sap/hdi-deploy": "^3.11.4",
		"@sap/instance-manager": "^2",
		"@sap/xsenv": "^3",
		"@sap/xssec": "^2.1.16",
		"cf-nodejs-logging-support": "^6.5.1",
		"express": "^4",
		"passport": "^0",
		"request": "^2"
	},
	"devDependencies": {
		"sqlite3": "^5"
	},
	"engines": {
		"node": "12.18.3",
		"npm": "6.14.6"
	},
	"scripts": {
		"start": "cds run",
		"watch": "scripts-utility/watch-local.sh",
		"build": "scripts-utility/build.sh",
		"debug": "scripts-utility/debug-local.sh",
		"debug-on": "scripts-utility/debug-on.sh",
		"deploy": "echo 'Starting deploy...'; date; cf deploy mta_archives/cloud-cold-chain-multitenant_0.0.1.mtar -f; echo 'deploy finished'; date",
		"deploy-cap": "scripts-utility/deploy-cap.sh",
		"refreshEnv": "node scripts-utility/get-cap-services-env.js > default-env.json",
		"upgrade-tenants": "node scripts-utility/upgrade-tenants.js"
	},
	"cds": {
		"hana": {
			"deploy-format": "hdbtable"
		},
		"requires": {
			"uaa": {
				"kind": "xsuaa"
			}
		},
		"[development]": {
			"comment": "Anything defined inside of [development] will overrided prior values.",
			"requires": {
				"db": {
					"kind": "sqlite",
					"credentials": {
						"database": "local-test-data.db"
					}
				}
			}
		},
		"[production]": {
			"comment": "Anything defined inside of [production] will overrided prior values.",
			"requires": {
				"db": {
					"kind": "hana",
					"multiTenant": true,
					"vcap": {
						"label": "service-manager"
					}
				}
			}
		},
		"build": {
			"target": "gen",
			"tasks": [
				{
					"src": "db",
					"for": "hana",
					"options": {
						"model": [
							"db",
							"srv",
							"app"
						]
					}
				},
				{
					"src": "srv",
					"for": "node-cf",
					"options": {
						"model": [
							"db",
							"srv",
							"app"
						]
					}
				},
				{
					"src": ".",
					"for": "mtx",
					"dest": "srv"
				}
			]
		}
	}
}
